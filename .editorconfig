# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# すべてのファイルに適用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScriptファイル
[*.js]
indent_style = space
indent_size = 4

# HTML/CSSファイル
[*.{html,css}]
indent_style = space
indent_size = 2

# Markdownファイル
[*.md]
trim_trailing_whitespace = false

# JSONファイル
[*.json]
indent_style = space
indent_size = 2

# YAMLファイル
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# バッチファイル
[*.{bat,cmd}]
end_of_line = crlf

# シェルスクリプト
[*.sh]
end_of_line = lf